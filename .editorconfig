# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{html,css,scss,json,yml,sh}]
indent_style = space
indent_size = 2
[Makefile]
indnet_style = tab
[*.{pug,js}]
indent_style = space
indent_size = 4
